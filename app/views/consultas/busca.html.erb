<div class="row">
  <div class="col-lg-2">
    <h2>Exames</h2>
    <p>
      <% if session[:empresa_id] %>
      <% else %>
        <%= link_to 'Enviar Exame', new_consulta_path, class: 'btn btn-sm btn-default' %>
      <% end %>
    </p>
  </div>
  <div class="col-lg-10">
  
    <%= render 'form_busca' %>
  </div>
</div>

<br/>
<div class="row">
  <% if @arquivos.size == 0 %>
    <div class="alert alert-info" > <strong><h3>Nenhum registro retornado, faça uma busca.</h3></strong></div>
  <% else %>
  
    <table class="table table-condensed table-hover table-bordered">
        <thead>
          <tr>
            <th><input type="checkbox" class="toll"></th>
            <th>id</th>
            <th>Funcionario</th>
            <th>Matricula</th>
            <th>RG</th>
            <% if !@empresa %>
              <th>Clinica</th>
              <th>Empresa</th>
            <% end %>
            <th>Tipo Exame</th>
            <th>Data</th>
            <th>-</th>
          </tr>
        </thead>
        <tbody>
          <% @arquivos.each do |arquivo| %>
              <tr>
                <td><input type="checkbox" class="toll"></td>
                <td><%= arquivo.id %></td>
                <td><%= arquivo.consulta.funcionario.nome %> </td>
                <td><%= arquivo.consulta.funcionario.matricula %></td>
                <td><%= arquivo.consulta.funcionario.rg %></td>
                 <% if !@empresa %>
                  <td><%= arquivo.consulta.empresa.user.nome %></td>
                  <td><%= arquivo.consulta.empresa.nome %></td>
                <% end %>
                <td><%= arquivo.categoria.nome  unless arquivo.categoria_id.nil? %></td>
                <td><%= arquivo.data.strftime("%d/%m/%Y") unless arquivo.data.nil? %></td>
                <td><%= link_to '<span class="glyphicon glyphicon-cloud-download"></span> Download'.html_safe, "#{arquivo.asset.url}", class: "btn btn-default btn-xs", :target => "_blank" %></td>
              </tr>
          <% end %>
     </tbody>
      </table>
      <% end %>
</div>

<br />
<script type="text/javascript">

$('.toll').popover({
  selector: true,
  trigger: 'hover',
  title: 'Aviso Importante!',
  content: 'Essa função ainda está em desenvolvimento, aguarde versão 2.0.'
})

</script>