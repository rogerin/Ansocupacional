<h2>Clínicas</h2>
<p>
    <%= link_to 'Nova Clínica', new_user_path, class: 'btn btn-sm btn-default' %>
</p>

<table class="table table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Login</th>
        <th>Tipo</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nome %></td>
        <td><%= user.email %></td>
        <td><%= user.login %></td>
        <td><%= return_tipo user.tipo %></td>
        <td></td>
        <td></td>
        <td>
            <div class="btn-group btn-group-sm">
                <%= link_to 'Visualizar', user, class: 'btn btn-default' %>
                <%= link_to 'Editar', edit_user_path(user), class: 'btn btn-default' %>
                <%= link_to 'Deletar', user, method: :delete, data: { confirm: 'Realmente deseja deletar?' }, class: 'btn btn-default' %>
            </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br />
